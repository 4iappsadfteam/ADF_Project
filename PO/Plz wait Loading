function loading(evt) {
            var millisecondsToWait = 3000;
            var popup = AdfPage.PAGE.findComponentByAbsoluteId("p1");
            popup.show();
            setTimeout(function () {
                popup.hide();
            },
            millisecondsToWait);
        }
